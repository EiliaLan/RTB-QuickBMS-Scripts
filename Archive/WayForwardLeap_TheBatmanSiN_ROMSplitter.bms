		elif i == 83
			string FileExt = ".lyr"
		elif i == 84
			string FileExt = ".lyr"
		elif i == 85
			string FileExt = ".lyr"
		elif i == 86
			string FileExt = ".lyr"
		elif i == 93
			string FileExt = ".scn"
		elif i == 94
			string FileExt = ".ts8"
		elif i == 95
			string FileExt = ".lyr"
		elif i == 96
			string FileExt = ".lyr"
		elif i == 97
			string FileExt = ".lyr"
		elif i == 98
			string FileExt = ".lyr"
		elif i == 99
